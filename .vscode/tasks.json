{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Regular build CP",
            "command": "/bin/g++",
            "args": [
                "${file}",
                "-H",
                "-DRahul",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "-O2",
                "-Wshadow",
                "-Wformat=2",
                "-Wfloat-equal",
                "-Wconversion",
                "-Wlogical-op",
                "-Wshift-overflow=2",
                "-Wduplicated-cond",
                "-Wcast-qual",
                "-Wcast-align",
                "-Wno-misleading-indentation",
                "-D_GLIBCXX_DEBUG",
                "-D_GLIBCXX_DEBUG_PEDANTIC",
                "-D_FORTIFY_SOURCE=2",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-fno-sanitize-recover",
                "-fstack-protector"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Debug build CP",
            "command": "/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-O2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}